
@{
    ViewBag.Title = "Tạo tài khoản mới tại TiKi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-4">
    <div class="container mx-0 px-0 ">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-3">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                                    Đăng ký tài khoản
                                    <img src="~/Assets/tiki_logo.png" width="50" height="50" />
                                </p>

                                <form class="mx-1 mx-md-4">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <label class="form-label" for="name">Tên của bạn</label>
                                            <input type="text" id="name" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <i class="fa-solid fa-lg fa-fw me-3 fa-location-dot"></i>
                                            <label class="form-label" for="address">Địa chỉ</label>
                                            <input type="text" id="address" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <i class="fa-solid fa-lg fa-fw me-3 fa-phone"></i>
                                            <label class="form-label" for="phone">Số điện thoại</label>
                                            <input type="text" id="phone" class="form-control" onkeypress='return event.charCode >= 48 && event.charCode <= 57'></>

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <label class="form-label" for="email">Email</label>
                                            <input type="email" id="email" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div class="form-outline flex-fill mb-0">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <label class="form-label" for="mk">Mật khẩu</label>
                                            <input type="password" id="mk" class="form-control" />
                                        </div>
                                    </div>


                                    <div class="form-check d-flex mb-2">
                                        <input class="form-check-input me-2" type="checkbox" checked  id="terms" />
                                        <label class="form-check-label" for="terms">
                                            Tôi đã đồng ý <a href="#!">các điều khoản.</a>
                                        </label>
                                    </div>

                                    <p class="text-muted mb-4">Đã có tài khoản ? <a href="@Url.Action("SignIn","User")">Đăng nhập ngay</a> </p>

                                    <div class="d-flex justify-content-center mb-3 mb-lg-4 w-100">
                                        <button type="button" class="btn btn-primary btn-lg w-100">Đăng ký ngay!</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://img.freepik.com/free-vector/mobile-login-concept-illustration_114360-83.jpg?w=740&t=st=1698067957~exp=1698068557~hmac=ba08d5b6248f7d9f376b7855df8afa595bbac663fbaf47b553c2da1911d45212"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

