
@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="container mb-5 mt-3">
            <div class="row d-flex align-items-baseline">
                <div class="col-xl-9">
                    <p class="d-flex align-items-center gap-1" style="color: #7e8d9f;font-size: 20px;">
                        <i class="fa-solid fa-receipt"></i> Hóa Đơn >
                        <span class="fw-bolder">ID: #123-123</span>
                    </p>
                </div>
                <div class="col-xl-3 float-end">
                    <a class="btn btn-light text-capitalize border-0" data-mdb-ripple-color="dark">
                        <i class="fas fa-print text-primary"></i> Print
                    </a>
                    <a class="btn btn-light text-capitalize" data-mdb-ripple-color="dark">
                        <i class="far fa-file-pdf text-danger"></i> Export
                    </a>
                </div>
                <hr>
            </div>

            <div class="container">
                <div class="col-md-12">
                    <div class="text-center">
                        <img src="~/Assets/tiki_logo.png"
                             class="img-fluid rounded-3" style="width: 75px;" alt="Avatar">

                    </div>

                </div>


                <div class="row">
                    <div class="col-xl-8">
                        <ul class="list-unstyled">
                            @*TÊN KH*@
                            <li class="text-muted">Tới : <span class="main-blue-color">John Lorem</span></li>
                            @*ĐỊA CHỈ*@
                            <li class="text-muted">Địa chỉ : Street, City</li>

                            @* SĐT *@
                            <li class="text-muted"><i class="fas fa-phone"></i> 123-456-789</li>
                        </ul>
                    </div>
                    <div class="col-xl-4">
                        <p class="text-muted">
                            Chi tiết hóa đơn
                            <ul class="list-unstyled">
                              
                                <li class="text-muted">
                                    <i class="fas fa-circle" style="color: #0a68ff;"></i> <span class="fw-bold">Ngày tạo: </span>Jun 23,2021
                                </li>
                                <li class="text-muted">
                                    <i class="fas fa-circle" style="color: #0a68ff;"></i> <span class="me-1 fw-bold">Trạng thái:</span><span class="badge bg-main-blue text-white fw-bold">
                                        Đặt thành công
                                    </span>
                                </li>
                            </ul>
                    </div>
                </div>

                <div class="row my-2 mx-1 justify-content-center">
                    <table class="table table-striped table-borderless">
                        <thead style="background-color:#84B0CA ;" class="text-white">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tên món hàng</th>
                                <th scope="col">Số lượng</th>
                                <th scope="col">Giá đơn vị</th>
                                <th scope="col">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Pro Package</td>
                                <td>4</td>
                                <td>$200</td>
                                <td>$800</td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Web hosting</td>
                                <td>1</td>
                                <td>$10</td>
                                <td>$10</td>
                            </tr>

                        </tbody>

                    </table>
                </div>
                <div class="row">
                    <div class="col-xl-8">


                    </div>
                    <div class="col-xl-3">

                        <p class="text-black float-start">
                            <span class="text-black me-3"> Tổng cộng </span><span style="font-size: 25px;">$1221</span>
                        </p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-12">
                        <p>Cảm ơn đã tin dùng hàng ở Tiki</p>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

