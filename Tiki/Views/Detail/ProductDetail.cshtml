
@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row py-4 my-2  ">

    <div class="col-10">

        <div class="d-flex flex-column flex-md-row ">
            <div class="row">
                <div class="col-md-5 bg-white d-flex flex-column p-3  rounded-4" style="height: fit-content">

                    <div id="productImageCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active" data-bs-interval="2000">
                                <img style="width:365px; height:365px;" class="rounded-4 object-fit-cover mx-auto" src="~/Assets/vinamilk_banner.png" />
                            </div>
                            <div class="carousel-item" data-bs-interval="2000">
                                <img style="width:365px; height:365px;" class="rounded-4 object-fit-cover mx-auto" src="~/Assets/ad-banner2.png" />
                            </div>
                            <div class="carousel-item" data-bs-interval="2000">
                                <img style="width:365px; height:365px;" class="rounded-4 object-fit-cover mx-auto" src="~/Assets/vinamilk_banner.png" />
                            </div>
                        </div>
                        <button class="carousel-control-prev ms-4" type="button" data-bs-target="#productImageCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next me-4" type="button" data-bs-target="#productImageCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                </div>
                <div class="col-md-6 d-flex flex-column">
                    @*Tiêu đề*@
                    <div class=" bg-white ms-4 p-3  rounded-4 d-flex flex-column  ">
                        <p class="cate-item">Thương hiệu : <span class="main-blue-color fw-bold">ABCXYZ</span> </p>

                        <p class="my-2 fw-bolder tiki-title fs-4 h-auto truncate-4">
                            Loa Bluetooth GUTEK C3 MINI Nghe Nhạc Cầm Tay Không Dây, Vỏ Nhôm Nghe Nhạc Hay, Âm Thanh Chất Lượng, Hỗ Trợ Kết Nối Bluetooth 4.0, Thẻ Nhớ, Đài FM, Usb, Nhiều Màu Sắc - Hàng Chính Hãng  Sắc - Hàng Chính Hãng  Sắc - Hàng Chính Hãng
                        </p>

                        <p class="fs-5 fw-bold ">Giá : <span class="fs-3 fw-bolder main-blue-color">119.998 <sup>₫</sup></span>  </p>
                    </div>

                    @*Thông tin chi tiết*@
                <div class=" bg-white ms-4 p-3 my-4  rounded-4 d-flex flex-column  ">
                    <p class="main-title">Thông tin chi tiết</p>


                    <div class="row border-bottom p-2 ">
                        <div class="col-md-8">Thương hiệu </div>
                        <div class="col-md-4 border-start">ABCXYZ</div>
                    </div>
                    <div class="row border-bottom p-2 ">
                        <div class="col-md-8">Xuất xứ </div>
                        <div class="col-md-4 border-start">Việt Nam</div>
                    </div>
                    <div class="row border-bottom p-2 ">
                        <div class="col-md-8">Năm sản xuất </div>
                        <div class="col-md-4 border-start">2023</div>
                    </div>
                    <div class="row border-bottom p-2 ">
                        <div class="col-md-8">Bảo hành </div>
                        <div class="col-md-4 border-start">24 tháng</div>
                    </div>
                    <div class="row border-bottom  p-2 ">
                        <div class="col-md-8">Khối lượng </div>
                        <div class="col-md-4 border-start">25kg</div>
                    </div>



                </div>
                </div>

            </div>

        </div>


    </div>

    <div class="col-2 bg-white p-3 rounded-4 " style="height: fit-content;">
        GIÁ
    </div>

</div>

