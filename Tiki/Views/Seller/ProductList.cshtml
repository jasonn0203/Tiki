
@model IEnumerable<Tiki.Models.SanPham>

@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}



<div class="page-container">

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content--p30">

            @*Danh sách sản phẩm*@

            @if (ViewBag.Message == null)
            {
                <div class="table-responsive">
                    <div class="table-wrapper overflow-x-hidden">
                        <div class="table-title">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h2>Quản lý sản phẩm</h2>
                                </div>
                                <div class="col-xs-6">
                                    <a href="@Url.Action("AddProduct","Seller")" class="btn btn-light"><i class="fa-solid fa-plus text-dark"></i> <span class="text-dark">Thêm mới sản phẩm</span></a>

                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        <span class="custom-checkbox">
                                            <input type="checkbox" id="selectAll">
                                            <label for="selectAll"></label>
                                        </span>
                                    </th>
                                    <th>Tên SP</th>
                                    <th>Loại</th>
                                    <th>Giá</th>
                                    <th>Thumbnail</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>
                                            <span class="custom-checkbox">
                                                <input type="checkbox" id="checkbox1" name="options[]" value="1">
                                                <label for="checkbox1"></label>
                                            </span>
                                        </td>
                                        <td>@item.TenSanPham</td>
                                        <td>@item.PhanLoaiSP.TenPhanLoai</td>
                                        <td>@string.Format("{0:N0} đ", item.Gia)</td>
                                        <td>
                                            <img src="@item.HinhAnh1" width="50" height="50" class="img-fluid" />
                                        </td>
                                        <td>
                                            <a href="">
                                                <i class="fa-solid fa-pen-to-square text-info"></i>
                                            </a>

                                            <a href="">
                                                <i class="fa-solid fa-trash text-danger"></i>
                                            </a>
                                        </td>
                                    </tr>

                                </tbody>
                            }

                        </table>
                        <div class="clearfix">
                            <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
                            <ul class="pagination">
                                <li class="page-item disabled"><a href="#">Previous</a></li>
                                <li class="page-item"><a href="#" class="page-link">1</a></li>
                                <li class="page-item"><a href="#" class="page-link">2</a></li>
                                <li class="page-item active"><a href="#" class="page-link">3</a></li>
                                <li class="page-item"><a href="#" class="page-link">4</a></li>
                                <li class="page-item"><a href="#" class="page-link">5</a></li>
                                <li class="page-item"><a href="#" class="page-link">Next</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <div class="table-wrapper overflow-x-hidden">
                        <div class="table-title">
                            <div class="row">
                                <div class="col-xs-6">
                                    <h2>Quản lý sản phẩm</h2>
                                </div>
                                <div class="col-xs-6">
                                    <a href="@Url.Action("AddProduct","Seller")" class="btn btn-light"><i class="fa-solid fa-plus text-dark"></i> <span class="text-dark">Thêm mới sản phẩm</span></a>

                                </div>
                            </div>
                        </div>

                    </div>

                    <p class="d-flex align-items-center justify-content-center text-danger fw-bolder fs-2">@ViewBag.Message</p>
                </div>

            }


        </div>

    </div>
</div>
