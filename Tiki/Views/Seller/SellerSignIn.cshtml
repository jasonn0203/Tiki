
@{
    ViewBag.Title = "SellerSignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="py-4">
    <div class="container mx-0 px-0 ">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-3">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                                    Trở thành nhà cung cấp
                                    <img src="~/Assets/tiki_logo.png" width="50" height="50" />
                                </p>

                                <form class="mx-1 mx-md-4">



                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <label class="form-label" for="form3Example3c">Email</label>
                                            <input type="email" id="form3Example3c" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div class="form-outline flex-fill mb-0">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            <label class="form-label" for="mk">Mật khẩu</label>
                                            <input type="password" id="mk" class="form-control" />
                                        </div>
                                    </div>



                                    <div class="d-flex justify-content-center mb-3 mb-lg-4 w-100">
                                        <button type="button" class="btn btn-primary btn-lg w-100">Đăng ký ngay!</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://img.freepik.com/free-vector/new-product-concept-illustration_114360-6721.jpg?w=740&t=st=1698238665~exp=1698239265~hmac=193cfe178287b5c1e7203016584697c7a717242057f28756622f0b4f1457367a"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


